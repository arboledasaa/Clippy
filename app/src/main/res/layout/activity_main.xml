<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/agent_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/agent_list_toolbar"
        android:scrollbars="horizontal|vertical"
        android:layout_marginBottom="54dp"/>

        <!--android:layout_above="@+id/control_bar"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:id="@+id/control_bar">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            >

            <View
                android:id="@+id/main_bottom_toolbar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/indigo_500"
                android:layout_gravity="bottom"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/main_fab_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_icon="@drawable/ic_action_play"
                    fab:fab_colorNormal="@color/orange_400"
                    fab:fab_colorPressed="@color/orange_900"
                    />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/main_fab_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_icon="@drawable/ic_action_volume_muted"
                    fab:fab_colorNormal="@color/orange_400"
                    fab:fab_colorPressed="@color/orange_900"
                    />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/main_fab_kill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_icon="@drawable/ic_action_cancel"
                    fab:fab_colorNormal="@color/orange_400"
                    fab:fab_colorPressed="@color/orange_900"
                    />
            </LinearLayout>


        </FrameLayout>


    </RelativeLayout>


    <android.support.v7.widget.Toolbar
        android:id="@id/agent_list_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />


</RelativeLayout>
